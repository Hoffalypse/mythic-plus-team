<div class="oribos">
  <div class="login-card">
    <h2 class="page-title standout-2">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <input class="form-input" placeholder="Email" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <input class="form-input" type="password" placeholder="Password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary submit" type="submit">Sign up</button>
      </div>
      <a class="sign" href="/login">Login Instead </a>
    </form>
  </div>
</div>
<script src="js/signup.js"></script>